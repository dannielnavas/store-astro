---
import { Header } from "../components/Header";
import "../styles/global.css";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <main class="container max-w-screen-2xl mx-auto p-4 prose">
      <Header title={title} />
      <slot />
    </main>
  </body>
</html>
