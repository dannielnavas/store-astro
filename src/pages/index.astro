---
import Base from "@layouts/Base.astro";
import Products from "@layouts/Products.astro";
import { getCollection } from "astro:content";
const products = (await getCollection("products")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
); // Get all products el products sale de la carpeta products su nombre es el nombre de la carpeta
---

<Base title="Astro store">
  <Products products={products} />
</Base>
